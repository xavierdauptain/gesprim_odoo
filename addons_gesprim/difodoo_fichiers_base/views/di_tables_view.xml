    <record id="view_param_form" model="ir.ui.view">
        <field name="name">di.param.form</field>
        <field name="model">di.param</field>
        <field eval="15" name="priority"/>
        <field name="arch" type="xml">
            <form string="Paramètres">
                <sheet modifiers="{}" string="Paramètres">
                    <group>
                        <group string="Généralités">
                            <field can_create="true" can_write="true"
                                name="di_company_id" readonly="1"/>
                            <group string="Ventes">
                                <field name="di_horizon"/>
                                <field name="di_seuil_marge_prc"/>
                            </group>
                            <group string="Achats">                            
                                <field name="di_mode_grille_ach"/>
                                <field name="di_horizon_ach" attrs="{'invisible': [('di_mode_grille_ach', '!=', 'HORIZON')]}"/>
                                <field name="di_nbcde_ach" attrs="{'invisible': [('di_mode_grille_ach', '!=', 'NBCDE')]}"/>
                            </group>
                        </group>
                        <group string="Impressions">
                            <field name="di_printer_id"/>
                            <field name="di_label_id"/>
                            <field name="di_printer_ach_id"/>
                            <field name="di_label_ach_id"/>
                        </group>
                        <group string="Comptabilité">
                            <field name="di_compta_prg"/>
                            <field name="di_dos_compt"/>
                            <field name="di_etb_compt"/>
                            <field name="di_nom_exp_ecr_compta"/>
                        </group>
                        <group string="Facturation">                           
                            <group string="Ventes">
                                <field name="di_autovalid_fact_ven"/>
                                <field name="di_autoimp_fact_ven"/>
                            </group>                           
                        </group>
                        <group>
                            <field name="di_seq_art"/>
                            <field name="di_seq_cli"/>
                            <field name="di_seq_fou"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
