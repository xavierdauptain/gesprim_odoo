                        <field can_create="true" can_write="true"
                            modifiers="{'readonly':true}" name="di_company_id"/>
                        <field modifiers="{'required':true}" name="di_product_id"/>
                        <field invisible="1" name="di_product_tmpl_id"/>
                        <!-- <field name="di_partner_id" domain="[('customer','=',True),('parent_id','=',False)]" context="{'search_default_customer':1, 'show_address': 1}" options='{"always_reload": True}'/> -->
                        <field modifiers="{'required':true}" name="di_code_tarif_id"/>
                        <field modifiers="{'required':true}" name="di_un_prix"/>
                        <field
                            attrs="{'readonly': [('di_un_prix', '!=', 'COLIS')],'required':[('di_un_prix','=','COLIS')]}"
                            context="{ 'default_product_id': di_product_tmpl_id, 'tree_view_ref':'product.product_packaging_tree_view',                              'form_view_ref':'product.product_packaging_form_view'}"
                            domain="[('di_product_tmpl_id','=',di_product_tmpl_id),('di_type_cond','=','COLIS')]"
                            groups="product.group_stock_packaging" name="di_type_colis_id"/>
                        <field
                            attrs="{'readonly': [('di_un_prix', '!=', 'PALETTE')],'required':[('di_un_prix','=','PALETTE')]}"
                            context="{ 'default_product_id': di_product_tmpl_id, 'tree_view_ref':'product.product_packaging_tree_view',                              'form_view_ref':'product.product_packaging_form_view'}"
                            domain="[('di_product_tmpl_id','=',di_product_tmpl_id),('di_type_cond','=','PALETTE')]"
                            groups="product.group_stock_packaging" name="di_type_palette_id"/>
                        <field name="di_qte_seuil"/>
                        <field modifiers="{'required':true}" name="di_date_effet"/>
                        <field name="di_date_fin"/>
                        <field name="di_prix"/>
                    </group>
